<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/headerLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@drawable/shadow_login_layout"
    android:elevation="8dp"
    android:orientation="vertical"
    android:padding="2dp">

    <com.fresh.mind.plantation.customized.CustomTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/layout_shadow"
        android:elevation="8dp"
        android:gravity="left"
        android:padding="4dp"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typeface="lato_bold" />

    <com.fresh.mind.plantation.customized.CustomTextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:text="\t\tA plant that has been moved from its original location in the d sa nursery as a means of maintaining a compact root system &amp; promoting the production of the fine root hairs responsible for taking up moisture &amp; nutrition from the soil."
        android:textColor="@color/black"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:typeface="lato_semibold" />

    <com.fresh.mind.plantation.customized.JustifiedTextView xmlns:noghteh="http://noghteh.ir"
        android:id="@+id/justify2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="25dp"
        android:text="\t\tA plant that has been moved from its original location in the d sa nursery as a means of maintaining a compact root system &amp; promoting the production of the fine root hairs responsible for taking up moisture &amp; nutrition from the soil."
        android:visibility="gone"
        noghteh:textSize="18sp" />

    <WebView
        android:id="@+id/textJustified"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <!--<View-->
    <!--android:layout_width="0dp"-->
    <!--android:layout_height="0dp"-->
    <!--android:background="@color/black"-->
    <!--android:visibility="gone"-->
    <!--app:layout_constraintLeft_toLeftOf="parent"-->
    <!--app:layout_constraintRight_toRightOf="parent"-->
    <!--/>-->

</LinearLayout>