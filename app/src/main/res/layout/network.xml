<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialogAnimation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <com.fresh.mind.plantation.customized.CustomTextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="Network Connection"
        android:textColor="@color/black"
        app:typeface="lato_bold" />

    <com.fresh.mind.plantation.customized.CustomTextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView18"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="   Now your in Offline, So some Details fetching in local and it may be same values from previous uploading datas. Connect data connection and fetch fresh datas from server. Now goto data settings?"
        android:textColor="@color/light_black"
        app:typeface="lato_semibold" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView17"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.fresh.mind.plantation.customized.CustomTextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="Cancel"
            android:textColor="@color/colorPrimaryDark"
            app:typeface="lato_bold" />

        <com.fresh.mind.plantation.customized.CustomTextView
            android:id="@+id/enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="Enable"
            android:textColor="@color/colorPrimaryDark"
            app:typeface="lato_bold" />

        <com.fresh.mind.plantation.customized.CustomTextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="Done"
            android:textColor="@color/colorPrimaryDark"
            app:typeface="lato_bold" />
    </LinearLayout>

</RelativeLayout>