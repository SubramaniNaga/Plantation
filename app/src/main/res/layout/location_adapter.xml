<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="360dp"
    android:layout_height="68.5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:orientation="vertical">

        <ImageView
            android:layout_width="15.1dp"
            android:layout_height="20.9dp"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="15.4dp"
            android:layout_marginRight="19.9dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/vector_drawablelocation" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="308.3dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:layout_marginTop="19dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.fresh.mind.plantation.customized.CustomTextView
            android:id="@+id/mLocatioTitle"
            android:layout_width="wrap_content"
            android:layout_height="19.5dp"
            android:gravity="center"
            android:text="Banashankari"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:typeface="lato_regular" />

        <com.fresh.mind.plantation.customized.CustomTextView
            android:id="@+id/mLocationSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="19.5dp"
            android:layout_marginBottom="1.5dp"
            android:gravity="center"
            android:text="Bangalore, Karnataka, India"
            android:textColor="@color/black"
            android:textSize="8.5sp"
            app:typeface="lato_regular" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

    </LinearLayout>

</LinearLayout>